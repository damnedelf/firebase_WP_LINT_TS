{
  "env": { "es6": true },
  "extends": ["prettier", "plugin:@typescript-eslint/recommended", "plugin:@typescript-eslint/eslint-recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-empty-function": ["error", { "allow": ["constructors"] }]
    // "@typescript-eslint/no-empty-function": ["allow", { "allow": ["constructors"] }]
  }
}
